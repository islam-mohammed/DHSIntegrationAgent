<Window x:Class="DHSIntegrationAgent.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:DHSIntegrationAgent.App.UI.Converters"
        Title="DHS Integration Agent"
        Height="650"
        Width="1100"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Colors for Material Design -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Indigo" SecondaryColor="Lime" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Add converter as resource -->
            <converters:BooleanToGridLengthConverter x:Key="BooleanToGridLengthConverter" TrueValue="220" FalseValue="0"/>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- Header -->

        <!-- Body -->
        <Grid Style="{StaticResource BodyStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding IsMenuVisible, Converter={StaticResource BooleanToGridLengthConverter}}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Menu -->
            <Border Grid.Column="0"
                    Background="#255674"
                    BorderThickness="0,0,0,0"
                    BorderBrush="{StaticResource BrushBorder}"
                    Visibility="{Binding IsMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Margin="0">
                    <Border Padding="15,20,10,15" Margin="0,0,0,15" BorderThickness="0,0,0,1" 
                            BorderBrush="#1a3c51eb" >
                        <TextBlock Text="DHS Agent" Foreground="#f1f1f1" FontSize="18"
                               FontWeight="SemiBold"    />
                    </Border>
                    <Button  Style="{StaticResource SidebarBtn}"
                            Command="{Binding GoDashboardCommand}" Width="219"  >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189">
                            <materialDesign:PackIcon Kind="ViewDashboardOutline"  Width="23" Height="23" Margin="0,0,10,0"/>
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Dashboard</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  Style="{StaticResource SidebarBtn}"
                             Command="{Binding GoBatchesCommand}" Width="219">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189" >
                            <materialDesign:PackIcon Kind="PackageVariant" Width="23" Height="23" Margin="0,0,10,0"/> 
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Batches</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  Style="{StaticResource SidebarBtn}"
                             Command="{Binding GoDomainMappingsCommand}" Width="219">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189" >
                            <materialDesign:PackIcon Kind="SwapHorizontal" Width="23" Height="23" Margin="0,0,10,0"/>
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Domain Mappings</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  Style="{StaticResource SidebarBtn}"
                             Command="{Binding GoAttachmentsCommand}" Width="219">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189" >
                            <materialDesign:PackIcon Kind="Attachment" Width="23" Height="23" Margin="0,0,10,0"/> 
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Attachments</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  Style="{StaticResource SidebarBtn}"
                             Command="{Binding GoDiagnosticsCommand}" Width="219">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189" >
                            <materialDesign:PackIcon Kind="Bug" Width="23" Height="23" Margin="0,0,10,0"/> 
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Diagnostics</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  Style="{StaticResource SidebarBtn}"
                              Command="{Binding GoSettingsCommand}" Width="219">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="189" >
                            <materialDesign:PackIcon Kind="Settings" Width="23" Height="23" Margin="0,0,10,0"/>
                            <TextBlock Style="{StaticResource SidebarBtnText}"> Settings</TextBlock>
                        </StackPanel>
                    </Button> 
                </StackPanel>
            </Border>

            <!-- Active Screen -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
        </Grid>
    </DockPanel>
</Window>
