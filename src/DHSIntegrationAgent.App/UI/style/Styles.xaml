    <!-- IconTextBtn2 -->
    <Style x:Key="IconTextBtn2" TargetType="Button" >
        <Setter Property="Height" Value="39"/>
        <Setter Property="Background" Value="#008080"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#008080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  Background="{TemplateBinding Background}">
                        <ContentPresenter
		                  HorizontalAlignment="Center"
		                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#009999"/>
                            <Setter Property="BorderBrush" Value="#009999"/>
