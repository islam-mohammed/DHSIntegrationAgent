    <!-- IconBtn Based On IconTextBtn -->
    <Style x:Key="IconBtn"  TargetType="Button"  BasedOn="{StaticResource IconTextBtn }">
        <Setter Property="Foreground" Value="#0576b8"/>
        <Setter Property="Background" Value="#EDF8FF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  Background="{TemplateBinding Background}">
                        <ContentPresenter
		                  HorizontalAlignment="Center"
		                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#0576b8"/>
                            <Setter Property="Background" Value="#E2F2FC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
