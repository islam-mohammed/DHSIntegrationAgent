<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Body Style -->
    <Style x:Key="BodyStyle" TargetType="Grid">
        <Setter Property="Background" Value="#F4F6FA"/>
    </Style>

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    <!-- PageTitle Style -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#000"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <!-- SubPageTitle Style -->
    <Style x:Key="SubPageTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <!-- BaseSidebarBtn Style -->
    <Style x:Key="BaseSidebarBtn" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="15,10,15,10"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="40"/>
    </Style>
    <!-- SidebarBtn Style -->
    <Style x:Key="SidebarBtn" TargetType="Button" BasedOn="{StaticResource BaseSidebarBtn}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="0"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      Background="{TemplateBinding Background}">
                        <ContentPresenter
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#23526f"/>
                            <Setter Property="BorderBrush" Value="#23526f"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SidebarBtnText Style -->
    <Style x:Key="SidebarBtnText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13.5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <!-- Label Style -->
    <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>
    <!-- base input style -->
    <Style x:Key="BaseInputControl" TargetType="Control">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="BorderBrush" Value="#D6DBF5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- base button style -->
    <Style x:Key="BaseBtnControl" TargetType="Button">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#32729B"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#32729B"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Roundedbtn style-->
    <Style x:Key="Roundedbtn" TargetType="Button" BasedOn="{StaticResource BaseBtnControl}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         Background="{TemplateBinding Background}">
                        <ContentPresenter
			                  HorizontalAlignment="Center"
			                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#8E81A9"/>
                            <Setter Property="BorderBrush" Value="#8E81A9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="LoginButton" TargetType="Button">
        <Setter Property="Background" Value="#0A7D7D"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
         CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#8E81A9"/>
                            <Setter Property="BorderBrush" Value="#8E81A9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- textbox style-->
    <Style x:Key="RoundedTextBox" TargetType="TextBox" BasedOn="{StaticResource BaseInputControl}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border CornerRadius="8"
                         BorderThickness="{TemplateBinding BorderThickness}" 
                         BorderBrush="{TemplateBinding BorderBrush}"
                         Background="{TemplateBinding Background}">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Password style-->
    <Style x:Key="RounderPassword" TargetType="PasswordBox" BasedOn="{StaticResource BaseInputControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border CornerRadius="8"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         Background="{TemplateBinding Background}"
                        >
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Rounded DatePicker -->
    <Style x:Key="RoundedDatePicker"
       TargetType="DatePicker"
       BasedOn="{StaticResource BaseInputControl}">

        <Setter Property="Foreground" Value="#333"/>
        <Setter Property="SelectedDateFormat" Value="Short"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Grid>

                        <Border x:Name="Border"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="8,0">

                            <Grid>
                                <!-- Date Text -->
                                <DatePickerTextBox x:Name="PART_TextBox"
                       Background="Transparent"
                       BorderThickness="0"
                       VerticalContentAlignment="Center"
                       Focusable="False">
                                    <DatePickerTextBox.Style>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>

                                            <!-- منع Hover / Focus -->
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePickerTextBox.Style>
                                </DatePickerTextBox>

                                <!-- Calendar Button -->

                                <Button x:Name="PART_Button"
                                    Width="30"
                                    Focusable="False"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand"
                                    Background="Transparent"
                                    BorderThickness="0">

                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>

                                            <!-- Prevent Hover / Press -->
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent" BorderThickness="0">
                                                <!-- Icon -->
                                                <Path Width="16"
                                                      Height="16"
                                                      Stretch="Uniform"
                                                      Data="
                                            M7 2V4H9V2H15C16.1 2 17 2.9 17 4V16
                                            C17 17.1 16.1 18 15 18H3
                                            C1.9 18 1 17.1 1 16V4
                                            C1 2.9 1.9 2 3 2H7ZM15 16V7H3V16H15ZM3 5H15V4H3V5Z">

                                                    <!-- Icon Hover   -->
                                                    <Path.Style>
                                                        <Style TargetType="Path">
                                                            <Setter Property="Fill" Value="#32729B"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Fill" Value="#24536F"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>


                                </Button>
                            </Grid>
                        </Border>

                        <!-- Calendar Popup -->
                        <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False">
                            <Border CornerRadius="8"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1" 
                                Margin="0,5,0,0">
                                <Calendar/>
                            </Border>
                        </Popup>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Rounded ComboBox -->
    <Style x:Key="RoundedComboBox" TargetType="ComboBox"
       BasedOn="{StaticResource BaseInputControl}">

        <Setter Property="Foreground" Value="#333"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="Border"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="8,0">

                            <Grid>
                                <!-- Selected Item -->
                                <ContentPresenter
                                Content="{TemplateBinding SelectionBoxItem}"
                                VerticalAlignment="Center"
                                Margin="5,0,30,0"/>

                                <!-- Arrow -->
                                <ToggleButton
                                    IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                    Focusable="False"
                                    ClickMode="Press"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"
                                    Width="25">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent" BorderThickness="0">
                                                <Path
                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                Fill="#555"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!-- DropDown List -->
                        <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Fade"
                           StaysOpen="False"
                           PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}">

                            <Border CornerRadius="2"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                Margin="0,5,0,0"
                                Width="{Binding PlacementTarget.ActualWidth,
                                    RelativeSource={RelativeSource AncestorType=Popup}}">
                                <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>

                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Sidebar Button -->
    <Style x:Key="SidebarButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0 4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1D4ED8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Progress Card -->
    <Style x:Key="ProgressCard" TargetType="Border">
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0 0 0 15"/>
    </Style>

    <!-- DashboardCardStyle -->
    <DropShadowEffect x:Key="DashboardShadow"
                  BlurRadius="20"
                  ShadowDepth="2"
                  Opacity="0.18"/>

    <Style x:Key="DashboardCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource DashboardShadow}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform/>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- CardTitle -->
    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" ></Setter>
        <Setter Property="VerticalAlignment" Value="Center" ></Setter>
        <Setter Property="FontWeight" Value="Bold" ></Setter>
        <Setter Property="Foreground" Value="#333"></Setter>
    </Style>
    <!-- IconTextBtn -->
    <Style x:Key="IconTextBtn" TargetType="Button" >
        <Setter Property="Height" Value="39"/>
        <Setter Property="Background" Value="#32729B"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#32729B"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  Background="{TemplateBinding Background}">
                        <ContentPresenter
		                  HorizontalAlignment="Center"
		                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#8E81A9"/>
                            <Setter Property="BorderBrush" Value="#8E81A9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
