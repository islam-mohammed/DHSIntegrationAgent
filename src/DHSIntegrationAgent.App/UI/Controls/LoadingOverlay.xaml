<UserControl x:Class="DHSIntegrationAgent.App.UI.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsHitTestVisible="{Binding IsLoading}">
    <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
        <!-- Semi-transparent black background for blur effect -->
        <Border Background="#CC000000" 
                CornerRadius="10" 
                Padding="40,30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Spinning Circle Animation -->
                <Viewbox Width="60" Height="60" Margin="0,0,0,20">
                    <Canvas Width="120" Height="120">
                        <Canvas.Resources>
                            <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                               Storyboard.TargetProperty="Angle"
                                               From="0" To="360"
                                               Duration="0:0:1.5"/>
                            </Storyboard>
                        </Canvas.Resources>
                        <Canvas.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" CenterX="60" CenterY="60"/>
                        </Canvas.RenderTransform>
                        <Canvas.Triggers>
                            <EventTrigger RoutedEvent="Canvas.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
                            </EventTrigger>
                        </Canvas.Triggers>
                        
                        <!-- Spinner Circle Segments -->
                        <Path Data="M 60,10 A 50,50 0 0,1 110,60" 
                              Stroke="#4A90E2" 
                              StrokeThickness="8" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round"/>
                        <Path Data="M 110,60 A 50,50 0 0,1 60,110" 
                              Stroke="#4A90E2" 
                              StrokeThickness="8" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round" 
                              Opacity="0.7"/>
                        <Path Data="M 60,110 A 50,50 0 0,1 10,60" 
                              Stroke="#4A90E2" 
                              StrokeThickness="8" 
                              StrokeStartLineCap="Round" 
                              StrokeEndLineCap="Round" 
                              Opacity="0.4"/>
                    </Canvas>
                </Viewbox>
                
                <!-- Loading Text -->
                <TextBlock Text="Loading..." 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
                
                <TextBlock Text="Please wait..." 
                           Foreground="#CCCCCC" 
                           FontSize="13"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
