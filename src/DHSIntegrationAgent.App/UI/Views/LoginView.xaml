<UserControl x:Class="DHSIntegrationAgent.App.UI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mvvm="clr-namespace:DHSIntegrationAgent.App.UI.Mvvm">


    <Grid>

         <!--Background Image--> 
         <Grid.Background>
            <ImageBrush ImageSource="/UI/imgs/banner16.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background> 

        <!-- Overlay -->
        <!--<Rectangle Fill="#1C000000"/>-->

        <!-- Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- Login Card -->
            <Border Grid.Column="1"
                    Margin="40"
                    Background="White"
                    CornerRadius="20"
                    Padding="35"
                    VerticalAlignment="Center" Style="{StaticResource DashboardCardStyle}" >

                <StackPanel>

                    <!-- Logo / Title --> 
                    <Image Source="/UI/imgs/MotLogo.png" Width="150" Margin="0,10,0,25" />

                    <TextBlock Text="LOGIN TO YOUR ACCOUNT"
                               FontSize="15"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Please enter your Email and Password "
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,25"/>

                    <!-- Email -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="10,0,10,0" Height="45">
                        <DockPanel>
                            <materialDesign:PackIcon Kind="EmailOutline"
                                 Width="18"
                                 Height="18"
                                 Foreground="#0A7D7D"
                                 Margin="0,0,5,0"
                                 VerticalAlignment="Center"/> 
                            <TextBox BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Tag="example@company.com" />
                        </DockPanel>
                    </Border>

                    <!-- Password -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,0"
                             Padding="10,0,10,0" Height="45">
                        <DockPanel>
                            <materialDesign:PackIcon Kind="LockOutline"
                         Width="18"
                         Height="18"
                         Foreground="#0A7D7D"
                         Margin="0,0,11,0"
                         VerticalAlignment="Center"/>
                            <!--<PasswordBox BorderThickness="0"
                                         FontSize="14" VerticalAlignment="Center"
                                          mvvm:PasswordBoxAssistant.BindPassword="True"
                                          mvvm:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
                            <Grid>
                                <PasswordBox x:Name="PwdBox"
                                 BorderThickness="0"
                                 FontSize="14"  Padding="5,0,0,0"
                                 VerticalAlignment="Center"
                                 mvvm:PasswordBoxAssistant.BindPassword="True"
                                 mvvm:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay}" />

                                <!-- Placeholder -->
                                <TextBlock Text="Password"
                                   Foreground="#787E8B"
                                   FontSize="14"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Password}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DockPanel>
                    </Border>
                    <TextBlock Text="{Binding Error}"
                        Foreground="{StaticResource BrushDanger}"
                        Margin="0,2,0,6"
                        TextWrapping="Wrap"/>
                    <!-- Login Button -->
                    <Button Height="45"
                        Margin="0,0,0,15"
                        Style="{StaticResource LoginButton}"
                       
                        IsDefault="True"
                        Command="{Binding LoginCommand}"> 
                        
                        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">

                            <materialDesign:PackIcon Kind="Login"
                                 Width="20"
                                 Height="20"
                                 Margin="0,0,8,0"/>

                            <TextBlock Text="Log In"
                               FontSize="14"
                               FontWeight="SemiBold"   Foreground="White"/>
                        </StackPanel>

                    </Button>
                  
                    <!-- Footer -->
                    <!--<TextBlock Text="© Copyright 2026 Motalabatech. All Rights Reserved."
                               FontSize="11"
                               Foreground="Gray"
                               Margin="0,10,0,10"
                               HorizontalAlignment="Center"/>-->

                </StackPanel>
            </Border>

        </Grid>
    </Grid> 
</UserControl>
