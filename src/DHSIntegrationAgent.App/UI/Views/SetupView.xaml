<UserControl x:Class="DHSIntegrationAgent.App.UI.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mvvm="clr-namespace:DHSIntegrationAgent.App.UI.Mvvm">

    <Grid>
         <!--Background Image-->
         <Grid.Background>
            <ImageBrush ImageSource="/UI/imgs/banner16.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- Setup Card -->
            <Border Grid.Column="1"
                    Margin="40"
                    Background="White"
                    CornerRadius="20"
                    Padding="35"
                    VerticalAlignment="Center" Style="{StaticResource DashboardCardStyle}" >

                <StackPanel>

                    <!-- Logo / Title -->
                    <Image Source="/UI/imgs/MotLogo.png" Width="150" Margin="0,10,0,25" />

                    <TextBlock Text="FIRST-RUN SETUP"
                               FontSize="15"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Enter GroupID and ProviderDhsCode"
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,25"/>

                    <!-- GroupID -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="10,0,10,0" Height="45">
                        <DockPanel>
                             <materialDesign:PackIcon Kind="ViewDashboardOutline"
                                 Width="18"
                                 Height="18"
                                 Foreground="#0A7D7D"
                                 Margin="0,0,5,0"
                                 VerticalAlignment="Center"/>
                            <TextBox BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding GroupId, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Group ID" />
                        </DockPanel>
                    </Border>
                    <!-- Error Text for GroupID -->
                    <TextBlock Text="{Binding GroupIdError}"
                           Foreground="{StaticResource BrushDanger}"
                           Margin="0,-10,0,10"
                           FontSize="10"
                           TextWrapping="Wrap"/>


                    <!-- ProviderDhsCode -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="10,0,10,0" Height="45">
                        <DockPanel>
                             <materialDesign:PackIcon Kind="ServerOutline"
                                 Width="18"
                                 Height="18"
                                 Foreground="#0A7D7D"
                                 Margin="0,0,5,0"
                                 VerticalAlignment="Center"/>
                            <TextBox BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding ProviderDhsCode, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Provider DHS Code" />
                        </DockPanel>
                    </Border>
                     <!-- Error Text for ProviderDhsCode -->
                    <TextBlock Text="{Binding ProviderDhsCodeError}"
                           Foreground="{StaticResource BrushDanger}"
                           Margin="0,-10,0,10"
                           FontSize="10"
                           TextWrapping="Wrap"/>

                    <!-- Network Username -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="10,0,10,0" Height="45">
                        <DockPanel>
                             <materialDesign:PackIcon Kind="Account"
                                 Width="18"
                                 Height="18"
                                 Foreground="#0A7D7D"
                                 Margin="0,0,5,0"
                                 VerticalAlignment="Center"/>
                            <TextBox BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding NetworkUsername, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Network Username (Optional)" />
                        </DockPanel>
                    </Border>

                     <!-- Network Password -->
                    <Border CornerRadius="8"
                            BorderBrush="#D6DBF5"
                            BorderThickness="1"
                            Margin="0,0,0,0"
                             Padding="10,0,10,0" Height="45">
                        <DockPanel>
                            <materialDesign:PackIcon Kind="LockOutline"
                                 Width="18"
                                 Height="18"
                                 Foreground="#0A7D7D"
                                 Margin="0,0,11,0"
                                 VerticalAlignment="Center"/>

                            <Grid>
                                <PasswordBox x:Name="SetupPwdBox"
                                 BorderThickness="0"
                                 FontSize="14"  Padding="5,0,0,0"
                                 VerticalAlignment="Center"
                                 mvvm:PasswordBoxAssistant.BindPassword="True"
                                 mvvm:PasswordBoxAssistant.BoundPassword="{Binding NetworkPassword, Mode=TwoWay}" />

                                <!-- Placeholder -->
                                <TextBlock Text="Network Password (Optional)"
                                   Foreground="#787E8B"
                                   FontSize="14"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NetworkPassword}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DockPanel>
                    </Border>

                    <!-- Save Error -->
                     <TextBlock Text="{Binding SaveError}"
                        Foreground="{StaticResource BrushDanger}"
                        Margin="0,2,0,6"
                        TextWrapping="Wrap"/>

                    <!-- Save Button -->
                    <Button Height="45"
                        Margin="0,0,0,15"
                        Style="{StaticResource LoginButton}"
                        IsDefault="True"
                        Command="{Binding SaveCommand}">

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">

                            <materialDesign:PackIcon Kind="ContentSaveOutline"
                                 Width="20"
                                 Height="20"
                                 Margin="0,0,8,0"/>

                            <!-- Button Content with loading state -->
                             <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Save and Continue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                                <Setter Property="Text" Value="Savingâ€¦"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                    </Button>

                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
